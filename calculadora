var primeiroValor = parseInt(prompt("Digite o primeiro valor:"));
var segundoValor = parseInt(prompt("Digite o segundo valor:"));
var operacao = prompt("Digite 1 para fazer uma divisão, 2 para multiplicação, 3 para soma e 4 para subtração:")

if(operacao == 1) {
  var divisao = primeiroValor / segundoValor
  document.write("<h2>" + primeiroValor + " / " + segundoValor + " = " + divisao + "</h2>"); 
} else if(operacao == 2) {
  var multiplicacao = primeiroValor * segundoValor
  document.write("<h2>" + primeiroValor + " x " + segundoValor + " = " + multiplicacao + "</h2>"); 
} else if(operacao == 3) {
  var soma = primeiroValor + segundoValor
  document.write("<h2>" + primeiroValor + " + " + segundoValor + " = " + soma + "</h2>"); 
} else if(operacao == 4) {
  var subtracao = primeiroValor - segundoValor
  document.write("<h2>" + primeiroValor + " - " + segundoValor + " = " + subtracao + "</h2>"); 
} else {
  document.write("<h2> Opção inválida </h2>")
}
